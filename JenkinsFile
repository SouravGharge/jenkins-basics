pipeline {
    agent any

    environment {
        IMAGE_NAME = 'jenkins-sample-image'
        TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/your-repo.git'  // Your repo with Dockerfile
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:${TAG} ."
            }
        }

        stage('Scan with Grype') {
            steps {
                sh '''
                    echo "[*] Checking if Grype is installed..."
                    if ! command -v grype &> /dev/null; then
                        echo "[*] Installing Grype..."
                        curl -sSfL https://raw.githubusercontent.com/anchore/grype/main/install.sh | sh -s -- -b /usr/local/bin
                    fi

                    echo "[*] Running Grype scan..."
                    grype ${IMAGE_NAME}:${TAG} --fail-on high -o table
                '''
            }
        }
    }
}
